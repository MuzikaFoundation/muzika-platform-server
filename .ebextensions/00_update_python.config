packages:
  yum:
    gcc: []
    openssl-devel: []
    bzip2-devel: []
    libffi-devel: []

command:
  01_python37_config:
    command: |
      wget https://www.python.org/ftp/python/3.7.0/Python-3.7.0.tgz
      tar xzf Python-3.7.0.tgz
      cd Python-3.7.0.tgz
      ./configure --enable-optimizations
      make altinstall
      cd ..
      rm -rf Python-3.7.0.tgz
      ln -s /usr/local/bin/python3.7 /usr/local/bin/python3
